# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=your_secret_key_here
SESSION_EXPIRE=30d

# Kakao OAuth (Optional)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_REDIRECT_URI=http://localhost:3000/oauth/kakao/callback

# 오픈뱅킹 API 설정
# 테스트베드 URL (상용 전환 시 https://openapi.openbanking.or.kr 로 변경)
OPENBANKING_API_URL=https://testapi.openbanking.or.kr

# 오픈뱅킹 포털에서 발급받은 클라이언트 정보
OPENBANKING_CLIENT_ID=your_client_id_from_openbanking_portal
OPENBANKING_CLIENT_SECRET=your_client_secret_from_openbanking_portal

# 콜백 URL (배포 URL에 맞게 변경 필요)
OPENBANKING_REDIRECT_URI=https://hvlab.app/api/banking/auth/callback

# 기관코드 (9자리) - 오픈뱅킹 포털에서 발급
OPENBANKING_INSTITUTION_CODE=M202401234

# 회사 계좌 정보 (출금계좌)
COMPANY_FINTECH_USE_NUM=your_fintech_use_number_from_openbanking
COMPANY_ACCOUNT_HOLDER=회사명
COMPANY_BANK_CODE=004
COMPANY_ACCOUNT_NO=123456789012

# 데이터 암호화 키 (32자 이상 권장)
ENCRYPTION_KEY=your-encryption-key-must-be-32-characters-minimum-length

# KB국민은행 기업 API (무료! 추천)
# KB 영업점에서 신청 후 발급받은 정보 입력
KB_API_URL=https://api.kbstar.com
KB_CLIENT_ID=발급받은_Client_ID
KB_CLIENT_SECRET=발급받은_Client_Secret
KB_COMPANY_ACCOUNT=회사_KB계좌번호
KB_COMPANY_ACCOUNT_HOLDER=회사명
# 공인인증서 (선택사항)
KB_CERT_PATH=/path/to/certificate.pfx
KB_CERT_PASSWORD=인증서_비밀번호
